<h1>Show User by ID</h1>
<section>
  <div>
    <img src=<%= @user.photo %> alt="Image placeholder">
    <div>
      <h2><%= @user.name %></h2>
      <p>Number of posts: <%= @user.postCounter %></p>
    </div>
  </div>
  <article>
    <h3>Bio</h3>
    <p><%= @user.bio %></p>
  </article>

<% @last_posts.each_with_index do |post, index|%>
  <article>
    <h3>post #<%= index + 1 %></h3>
    <p><%= post.text %></p>
    <span>Comments: <%= post.commentsCounter %>, Likes: <%= post.likesCounter %></span>
  </article>
<% end %>

  <button>See all posts</button>
</section>
