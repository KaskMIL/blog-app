<section class='user-profile-container'>
  <section class='post-container'>
    <div class='post-title'>
      <h2><%= @post.title %> <span>by <%= @post.author.name %></span></h2>
      <p>Comments: <%= @post.commentsCounter %> - Likes: <%= @post.likesCounter %></p>
    </div>
    <article class='post-text'>
      <p><%= @post.text %></p>
    </article>
  </section>

  <%= form_with url: user_post_comments_path(@user, @post), scope: :comment do |form|%>
    <%= form.text_area :text, placeholder: 'Leave a comment!', class: 'comment-area' %>
    <%= form.submit %>
  <% end %>
  
  <ul class= 'comment-container'>
    <%@comments.each do |comment|%>
      <li><h4><%= comment.author.name %>:</h4> <p><%= comment.text %></p></li>
    <%end%>
  </ul>
</section>